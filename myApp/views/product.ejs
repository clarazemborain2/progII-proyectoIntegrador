<!DOCTYPE html>
<html lang="es">
	
<%- include('./partials/head')  %> 

<body>
	<!-- Header -->
	<% if(locals.usuario != undefined){ %>
        <%- include('./partials/headerLogueado') %>
   
    <%  } else {%>
        <%- include('./partials/header') %>

    <% } %>
	<!-- /Header -->
	
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%=productos.nombre%></h2> 
			<p class="product-detail-description">
				<a href="/product/editProduct/<%=productos.id%>">Editar</a>
				<a href="/product/delete/<%=productos.id%>">- Eliminar</a>
				
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%=productos.imagen%>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%=productos.descripcion%></p>
				</article>
				
				<% if(locals.usuario != undefined){ %>
					<form class="form" action="/product/addComment" method="GET" enctype="multipart/form-data" >
						<input class="form-input" name="comentario"  type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
						
						<ul>
							<li>hola</li>
						</ul>
					</form> 
			   
				<%  } else {%>
					<div>
					 <a href="/profile/login" class="buy-now-button" >LOGUEATE PARA COMENTAR!</a>
					</div>
				<% } %>
				
					<hr>
				
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->

</body>	
</html>