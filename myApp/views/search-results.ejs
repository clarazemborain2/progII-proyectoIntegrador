<!DOCTYPE html>
<html lang="es">
	
<%- include('./partials/head')  %> 

<body>
	<!-- Header -->
	<% if(locals.usuario != undefined){ %>
        <%- include('./partials/headerLogueado') %>
   
    <%  } else {%>
        <%- include('./partials/header') %>

    <% } %>
	<!-- /Header -->
	
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<% if(productos.length == 0){ %>
				<h1>No se encontraron productos con el termino: <%= resultado %> </h1>
					 <%  } else {%>
			<p class="product-detail-description"></p>
		</div>
		<div class="product-detail">
			<div class="row" >
				
				<article class="col-12 col-lg-8 product-detail-info">
					<ul> 
						<% for(let i =0; i<productos.length;i++) {%>
						<li>
							<a href="/product/id/<%=productos[i].id %>" class="products-title"><%=productos[i].nombre%></a></li>
							<img src="/images/products/<%=productos[i].imagen%>" class="product-detail-img">
							<p class="product-detail-description">
								<%=productos[i].descripcion%></p>
								<p class="product-detail-description">Cargado por usuario: 
									<a href="/profile/id/<%=productos[i].usuario_id %>"><%=productos[i].usuario.usuario%></a></p>	
						<% } %>  
					</ul>
				</article>
				
				</div>
			</div>
		</div>
		<% } %> 
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->

</body>	
</html>