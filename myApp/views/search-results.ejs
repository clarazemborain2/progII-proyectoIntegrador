<!DOCTYPE html>
<html lang="es">


<%- include('./partials/head')  %> 

<body>
	<!-- Header -->
	<% if(locals.usuario != undefined){ %>
        <%- include('./partials/headerLogueado') %>
   
    <%  } else {%>
        <%- include('./partials/header') %>

    <% } %>
	
	
	<!-- /Header -->

	<!-- Resultados-->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
