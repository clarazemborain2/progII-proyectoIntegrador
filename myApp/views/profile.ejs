<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head')  %> 

<body>
	<!-- Header -->
	<% if(locals.usuario != undefined){ %>
        <%- include('./partials/headerLogueado') %>
   
    <%  } else {%>
        <%- include('./partials/header') %>

    <% } %>
	
				
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%=usuario.foto_de_perfil%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=usuario.usuario%>
						<a href="/profile/profile-edit/<%=usuario.id%>">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%=usuario.email%></li>

						
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Mis cristales</h2>

				<% for(let i = 0; i < usuario.producto.length; i++){ %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/id/<%= usuario.producto[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= usuario.producto[i].imagen %>" alt=<%= usuario.producto[i].nombre %>>
								</figure>
								<article class="product-box_data">
									<h2><%= usuario.producto[i].nombre %></h2>
									<p><%= usuario.producto[i].descripcion %> </p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
            </div>

		</div>
            <!-- Show the "ultimos" products -->
		



	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->
</body>	
</html>