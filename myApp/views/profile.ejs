			</nav>
		</div>
	</header>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src=<%=usuario.fotoDePerfil%> alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=usuario.usuario%>
						<a href="/profile/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%=usuario.email%></li>
						<li><%=usuario.fechaDeNacimiento%></li>
						<li><%=usuario.nroDeDocumento%></li>
						<li><%=usuario.productos%> productos</li> 
						<li><%=usuario.seguidores%> seguidres</li>
						<li><%=usuario.comentarios%> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis cristales</h2>
			</div>
			<!-- Show the "ultimos" products -->
	<% for (let i = 0; i < productos.length; i++) { %>
<div class="col-12 col-sm-6 col-lg-3">
	<section class="product-box">
		<a href="/product">
			<figure class="product-box_image">
				<img src=<%=productos[i].imagen%>  alt="cafetera moulinex">
			</figure>
			<article class="product-box_data">
				<h2><%=productos[i].nombre%></h2>
				<p><%=productos[i].descripcion%></p>
				<p><%=productos[i].comentarios%> comentarios</p>
			</article>
		</a>
	</section>
</div>
			<% } %>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->
</body>	
</html>