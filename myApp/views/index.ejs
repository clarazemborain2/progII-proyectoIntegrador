<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head')  %>

<body>

	
	<!-- /Header -->
	   <% if(locals.usuario != undefined){ %>
        <%- include('./partials/headerLogeado') %>
   
    <%  } else {%>
        <%- include('./partials/header') %>

    <% } %>
	
	
	<!-- Banner se muestra en css-->
	<div class="banner">
		 </div>

		 <h1>Visita numero: <%= contador %></h1>
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show  products -->
	<% for (let i = 0; i < productos.length; i++) { %>
<div class="col-12 col-sm-6 col-lg-3">
	<section class="product-box">
		<a href="/product/id/<%=productos[i].id%>">
			<figure class="product-box_image">
				<img src="/images/products/<%=productos[i].imagen%>"  alt="cafetera moulinex">
			</figure>
			<article class="product-box_data">
				<h2><%=productos[i].nombre%></h2>
				<p><%=productos[i].descripcion%></p>
			</article>
		</a>
	</section>
</div>

			<% } %>
		
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más destacados</h2>
			</div>
			<!-- Show the "ultimos" products -->
				<% for (let i = 0; i < 3; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%=productos[i].id%>">
							<figure class="product-box_image">
								<img src="/images/products/<%=productos[i].imagen%>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%=productos[i].nombre%></h2>
								<p><%=productos[i].descripcion%></p>
							</article>
						</a>
					</section>
				</div>
								
							<% } %>
						
					</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->
</body>	
</html>